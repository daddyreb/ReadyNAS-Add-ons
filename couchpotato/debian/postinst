#!/bin/sh
# postinst script for couchpotato
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
  configure)
    APPDIR=/apps/couchpotato
    chown -R admin:admin $APPDIR
    rm -rf $APPDIR/CouchPotatoServer
    export HOME="/home"
    git config --global http.sslverify false
    git clone https://github.com/RuudBurger/CouchPotatoServer.git $APPDIR/CouchPotatoServer
    cd $APPDIR/CouchPotatoServer
    git checkout build/2.6.2
    cp $APPDIR/CouchPotatoServer/init/ubuntu /etc/init.d/couchpotato
    chmod +x /etc/init.d/couchpotato
    mkdir -p /apps/couchpotato-data
    chown -R admin:admin /apps/couchpotato-data
    event_push app readynasd '<add-s resource-type="LocalApp" resource-id="LocalApp"><LocalApp appname="couchpotato" success="1" reboot="1"/></add-s>' 0 0
    ;;

  abort-upgrade|abort-remove|abort-deconfigure)
    ;;

  *)
    echo "postinst called with unknown argument \`$1'" >&2
    exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
